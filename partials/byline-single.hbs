{{!-- Everything inside the #author tags pulls data from the author --}}
{{#primary_author}}

<section class="card">
  {{#if profile_image}}
    <div class="imageCont">
      <img src="{{profile_image}}" alt="{{name}}" height="100" />
    </div>
  {{/if}}

  <section class="content">
    <h4><a href="/o-mnie">{{name}}</a></h4>
    {{!-- <h4><a href="{{url}}">{{name}}</a></h4> --}}
    {{#if bio}}
      <p>{{bio}}</p>
    {{else}}
      <p>Read <a href="{{url}}">more posts</a> by this author.</p>
    {{/if}}
  </section>
</section>

